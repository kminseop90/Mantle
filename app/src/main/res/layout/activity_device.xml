<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f4fc"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_device_step_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_weight="1"
        android:visibility="visible">

        <ImageView
            android:id="@+id/icon_device_image_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/img" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/icon_device_image_01"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="4dp"
            android:text="자전거에 올라탄채로 다음버튼을 눌러주세요"
            android:textColor="#7186c7"
            android:textSize="16dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_device_step_02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_weight="1"
        android:visibility="gone">

        <ImageView
            android:id="@+id/icon_device_image_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/img_helmet_head" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/icon_device_image_02"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="4dp"
            android:text="제스처 사용(깜빡이)을 위해 헬멧 착용 후\n세팅이 필요합니다. 시작하기를 눌러 진행\n하세요"
            android:textColor="#7186c7"
            android:textSize="16dp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_device_step_03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_weight="1"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/layout_device_image_03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false">

            <ImageView
                android:id="@+id/icon_device_image_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/helmet_head_l" />

            <cracker.com.mantle.components.EditBox
                android:id="@+id/view_edit_box_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="40dp"
                android:layout_toRightOf="@id/icon_device_image_03"
                android:clipChildren="false" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_device_image_03"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="4dp"
            android:text="정면을 바라 본 상태로 왼쪽으로 고개를\n움직인 후 저장하기를 눌러주세요"
            android:textColor="#7186c7"
            android:textSize="16dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_device_step_04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_weight="1"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/layout_device_image_04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:clipChildren="false">

            <ImageView
                android:id="@+id/icon_device_image_04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/helmet_head_r" />

            <cracker.com.mantle.components.EditBox
                android:id="@+id/view_edit_box_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/icon_device_image_04"
                android:clipChildren="false" />
        </RelativeLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_device_image_04"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="4dp"
            android:text="정면을 바라 본 상태로 오른쪽으로 고개를\n움직인 후 저장하기를 눌러주세요"
            android:textColor="#7186c7"
            android:textSize="16dp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/btn_device_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="70dp"
        android:src="@drawable/button_next" />

</LinearLayout>